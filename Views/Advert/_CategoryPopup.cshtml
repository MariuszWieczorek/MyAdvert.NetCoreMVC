@model IEnumerable<MyAdvert.Core.Models.Domains.Category>

<div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Wybierz kategorię</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="hideModalForm2()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            
            <div class="modal-body">
                @using (Html.BeginForm("Popup", "Advert", FormMethod.Post, new { id = "popupForm" }))
                {
                <div id="categoriesTable">
                    <table class="table mt-3 table-bordered table-hover table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Nazwa</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var category in Model)
                                {
                                    <tr onclick="pickCategory('@category.Id','@category.Name',this)">
                                        <td>

                                            <a href="@Url.Action("Category", "Advert",
                                    new { id = category.Id })"
                                               class="font-weight-bold">@category.Name</a>

                                        </td>
                                        <td>

                                            <button type="button" class="btn btn-danger btn-sm"
                                                    onclick="pickCategory('@category.Id','@category.Name',this)">
                                                Wybierz
                                            </button>


                                        </td>
                                    </tr>
                                }

                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">
                                        Brak kategorii
                                    </td>
                                </tr>
                            }


                        </tbody>

                    </table>
                </div>

                    <button type="submit" id="buttonSubmit2" style="display: none;"></button>
                    }
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="hideModalForm2()">Close</button>
                <button type="button" class="btn btn-primary" onclick="saveModalForm2()">Save changes</button>
            </div>
        </div>
    </div>
</div>